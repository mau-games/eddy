<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.InteractiveGUIController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" fx:id="newItem" onAction="#startNewFlow" text="New" />
            <MenuItem mnemonicParsing="false" fx:id="openItem" onAction="#openMap" text="Open…" />
            <!-- <Menu mnemonicParsing="false" text="Open Recent" /> -->
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" fx:id="saveItem" onAction="#saveMap" text="Save" />
            <MenuItem mnemonicParsing="false" fx:id="saveAsItem" onAction="#saveMap" text="Save As…" />
            <MenuItem mnemonicParsing="false" fx:id="exportItem" onAction="#exportImage" text="Export image" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" fx:id="prefsItem" onAction="#openPreferences" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" fx:id="exitItem" onAction="#exitApplication" text="Quit" />
          </items>
        </Menu>
<!--
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
-->
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" fx:id="aboutItem" onAction="#openAboutApplication" text="About Eddy" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane fx:id="mainPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" />
  </children>
</VBox>
